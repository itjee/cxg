

-- Additional tables from legacy system
-- Added: 2025-01-20

-- tea_board_mst
CREATE TABLE IF NOT EXISTS tea_board_mst (
  id SERIAL,
  create_on TIMESTAMP NOT NULL,
  create_by VARCHAR(50) NOT NULL,
  create_id INTEGER NOT NULL,
  update_on TIMESTAMP,
  update_by VARCHAR(50),
  update_id INTEGER,
  subject VARCHAR(500) NOT NULL,
  contents TEXT,
  st_date CHAR(8),
  ed_date CHAR(8),
  is_fix BOOLEAN NOT NULL,
  is_view BOOLEAN NOT NULL,
  is_delete BOOLEAN NOT NULL,
  expose_date CHAR(8),
  PRIMARY KEY (id)
);

-- tea_board_mst_file
CREATE TABLE IF NOT EXISTS tea_board_mst_file (
  id SERIAL,
  create_on TIMESTAMP,
  create_by VARCHAR(50),
  create_id INTEGER,
  update_on TIMESTAMP,
  update_by VARCHAR(50),
  update_id INTEGER,
  board_id INTEGER NOT NULL,
  file_nm VARCHAR(200) NOT NULL,
  file_path VARCHAR(200) NOT NULL,
  file_seq INTEGER,
  file_size DECIMAL(17, 2),
  PRIMARY KEY (id)
);

-- tea_board_mst_read
CREATE TABLE IF NOT EXISTS tea_board_mst_read (
  id SERIAL,
  create_on TIMESTAMP,
  create_by VARCHAR(50),
  create_id INTEGER,
  board_id INTEGER NOT NULL,
  empy_cd CHAR(10) NOT NULL,
  PRIMARY KEY (id)
);
